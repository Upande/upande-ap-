<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:text="name"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text1"/>
                <TextView
                    android:text="age"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text2"/>
                <TextView
                    android:text="gender"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text3"/>
                <TextView
                    android:text="photo"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text4"/>
                <TextView
                    android:text="location"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text5"/>
                <TextView
                    android:text="pizza fan"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text6"/>
                <TextView
                    android:text="pizza type"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text7"/>
                <TextView
                    android:text="favorite toppings"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text8"/>
                <TextView
                    android:text="start_time"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text9"/>
                <TextView
                    android:text="end_time"
                    android:textSize="30sp"
                    android:padding="5dp"
                    android:id="@+id/text10"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="gd"
                    android:textSize="30sp"
                    android:padding="5dp"/>
                <TextView
                    android:text="30"
                    android:textSize="30sp"
                    android:padding="5dp"/>
                <TextView
                    android:text="male"
                    android:textSize="30sp"
                    android:padding="5dp"/>
                <TextView
                    android:text="photo"
                    android:textSize="30sp"
                    android:padding="5dp"/>
                <TextView
                    android:text="photo"
                    android:textSize="30sp"
                    android:padding="5dp"/>
                <TextView
                    android:text="photo"
                    android:textSize="30sp"
                    android:padding="5dp"/>
                <TextView
                    android:text="photo"
                    android:textSize="30sp"
                    android:padding="5dp"/>
                <TextView
                    android:text="photo"
                    android:textSize="30sp"
                    android:padding="5dp"/>
                <TextView
                    android:text="photo"
                    android:textSize="30sp"
                    android:padding="5dp"/>
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>



</LinearLayout>
