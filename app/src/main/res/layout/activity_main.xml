<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fffaf2ff">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingRight="5dp"
         android:paddingLeft="5dp"
         android:background="#3DB2AB"
         android:id="@+id/llayout1"
         android:orientation="horizontal">
           <TextView
               android:layout_weight="70"
               android:text="Published Forms"
               android:id="@+id/publishedForms"
               android:textSize="27sp"
               android:layout_height="match_parent"
               android:layout_width="0dp" />

         <TextView
             android:layout_weight="30"
             android:text="Justus"
             android:id="@+id/name"
             android:textSize="25sp"
             android:layout_height="match_parent"
             android:layout_width="0dp" />


     </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/llayout1">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="6dp"

                    android:id="@+id/llayout2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/llayout1a">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/formtitle"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Tutorials"
                            android:textColor="#ff000000"
                            android:clickable="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/llayout1b">
                        <TextView
                            android:layout_weight="50"
                            android:text="Submissions: 30"
                            android:id="@+id/description"
                            android:layout_height="match_parent"
                            android:textColor="#ff000000"
                            android:layout_width="0dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/border"/>

                        <TextView
                            android:layout_weight="50"
                            android:text="formurl"
                            android:id="@+id/formurl"
                            android:layout_height="match_parent"
                            android:textColor="#ff000000"
                            android:paddingBottom="5dp"
                            android:layout_width="0dp"
                            android:background="@drawable/border"/>

                    </LinearLayout>

                </LinearLayout>



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
